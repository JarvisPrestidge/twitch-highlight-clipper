{
    "name": "twitch-highlight-clipper",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Jarvis Prestidge <jarvis@truelayer.com>",
    "license": "MIT",
    "scripts": {
        "clean": "rm -rf src/view/css/* static .cache && npm run clean-marko",
        "clean-marko": "find src -type f -name '*.marko.js' -delete",
        "build-css": "node-sass src/view/sass/bulma.scss src/view/css/main.css",
        "build": "npm run clean && npm run build-css && ts-node scripts/lasso.ts",
        "dev": "NODE_ENV=development npm run build",
        "prod": "NODE_ENV=production npm run build"
    },
    "dependencies": {
        "chrome-launcher": "^0.10.2",
        "dotenv": "^6.0.0",
        "iohook": "^0.2.0",
        "koa": "^2.5.2",
        "koa-router": "^7.4.0",
        "koa-static": "^5.0.0",
        "lowdb": "^1.0.0",
        "marko": "^4.4.28",
        "marko-path-router": "^0.7.3",
        "moment": "^2.22.2",
        "request": "^2.87.0",
        "request-promise-native": "^1.0.5",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "@lasso/marko-taglib": "^1.0.10",
        "@types/dotenv": "^4.0.3",
        "@types/koa": "^2.0.46",
        "@types/koa-router": "^7.0.30",
        "@types/koa-static": "^4.0.0",
        "@types/lasso": "^2.4.0",
        "@types/lowdb": "^1.0.3",
        "@types/node": "^10.5.2",
        "@types/request": "^2.47.1",
        "@types/request-promise-native": "^1.0.15",
        "bulma": "^0.7.1",
        "bulma-extensions": "^1.0.14",
        "lasso": "^3.1.4",
        "lasso-marko": "^2.4.0",
        "node-sass": "^4.9.0",
        "ts-node": "^6.0.0",
        "tslint": "^5.10.0",
        "tslint-config-prettier": "^1.13.0",
        "typescript": "^2.9.2"
    }
}
